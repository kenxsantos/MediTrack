<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/doc_name"
            android:paddingLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Doctors Name: "
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/line_a"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Text View"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="italic"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/doc_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hospital Address:"
            android:layout_weight="0.5"
            android:textColor="#fff000"
            android:paddingLeft="10dp"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/line_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Text View"
            android:layout_weight="0.5"
            android:textColor="#fff000"
            android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/doc_exp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Years of Experience:"
            android:paddingLeft="10dp"
            android:textColor="#ffff66"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/line_c"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Text View"
            android:textColor="#ffff66"
            android:textSize="12sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/doc_contact"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Contact Number"
            android:paddingLeft="10dp"
            android:textColor="#ffff66"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/line_d"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Text View"
            android:textColor="#ffff66"
            android:textSize="12sp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/doc_fee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Cons Fee:"
            android:paddingLeft="10dp"
            android:textColor="#ffff66"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/line_e"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Text View"
            android:textColor="#ffff66"
            android:textSize="12sp"/>



    </LinearLayout>

</LinearLayout>